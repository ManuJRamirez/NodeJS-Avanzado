<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <nav class="localeChange">
      <link rel="stylesheet" href="/stylesheets/style.css" />
      <% getLocales().forEach(locale => { %>
      <a href="/locale-changer/<%= locale %>"><%= locale %></a>
      <% }) %>
    </nav>
  </head>
  <body>
    <h1><%= title %></h1>
    <p><%= __('Welcome to')%> <%= title %></p>
    <div class="anuncios">
      <% anuncios.forEach( anuncio => { %>
      <div class="anuncio">
        <header><h3><%= anuncio.nombre %></h3></header>
        <% if (anuncio.venta) { %>
        <p><%= __('On Sale')%></p>
        <% } else { %>
        <p><%= __('On Purchasing')%></p>
        <% } %>
        <div class="img-wrapper">
          <img class="image" src="/images/<%= anuncio.foto %>" />
        </div>
        <p class="price">
          <%= __('Price:')%>
          <span class="price-number"><%= anuncio.precio %></span> â‚¬
        </p>
        <div class="tags">
          <% anuncio.tags.forEach( tag => { %>
          <p>#<%= tag %></p>
          <% }); %>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
